<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/_11pm"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dailynight"
        app:layout_constraintStart_toStartOf="@+id/dailynight"
        app:layout_constraintTop_toBottomOf="@+id/dailynight" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/_5pm"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dailyeven"
        app:layout_constraintStart_toStartOf="@+id/dailyeven"
        app:layout_constraintTop_toBottomOf="@+id/dailyeven" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/_1pm"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dailydaytime"
        app:layout_constraintStart_toStartOf="@+id/dailydaytime"
        app:layout_constraintTop_toBottomOf="@+id/dailydaytime" />

    <TextView
        android:id="@+id/dailynight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/dailyeven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dailyeven" />

    <TextView
        android:id="@+id/dailyeven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/dailydaytime"
        app:layout_constraintEnd_toStartOf="@+id/dailynight"
        app:layout_constraintStart_toEndOf="@+id/dailydaytime" />

    <TextView
        android:id="@+id/dailydaytime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/dailymorn"
        app:layout_constraintEnd_toStartOf="@+id/dailyeven"
        app:layout_constraintStart_toEndOf="@+id/dailymorn" />

    <TextView
        android:id="@+id/daydate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#311B92"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempminmax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|left"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daydate" />

    <TextView
        android:id="@+id/daily_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tempminmax"
        app:layout_constraintStart_toStartOf="@+id/tempminmax"
        app:layout_constraintTop_toBottomOf="@+id/tempminmax" />

    <TextView
        android:id="@+id/pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/daily_desc"
        app:layout_constraintStart_toStartOf="@+id/daily_desc"
        app:layout_constraintTop_toBottomOf="@+id/daily_desc" />

    <TextView
        android:id="@+id/uvi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pop"
        app:layout_constraintStart_toStartOf="@+id/pop"
        app:layout_constraintTop_toBottomOf="@+id/pop" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tempminmax"
        app:layout_constraintTop_toBottomOf="@+id/daydate"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dailymorn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/dailydaytime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uvi" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/_8am"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dailymorn"
        app:layout_constraintStart_toStartOf="@+id/dailymorn"
        app:layout_constraintTop_toBottomOf="@+id/dailymorn" />
</androidx.constraintlayout.widget.ConstraintLayout>